<h1>Editing Book</h1>

<%= form_with model:@book do |f| %>

<h4>title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<% end %>

<main>
 <div class= "show">
     <%= link_to 'Show', book_path(@book.id) %>
   </div>
    
 <div class= "back">
   <%= link_to 'Back', books_path(@book.id) %>
 </div>
</main>